<%- include('../../includes/imports/head') %>

</head>

<body class="scrollbar-inner wow fadeIn">
    <%- include('../../includes/components/mainheader') %>

    <main>
        <section id="banner" class="img-webp mb-3">
            <div class="container">
                <h1 class="title mb-3">
                    <span class="wow fadeIn" data-wow-delay="0.3s">Admnistrador</span>
                    <span class="wow bounceInUp bold" data-wow-delay="0.7s">Solicitações de exibição</span>
                </h1>
            </div>
        </section>

        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <%- include('../../includes/components/adminpanel') %>
                </div>
                <div class="col-lg-8">
                    <div class="admin-wrap">
                        <h3 class="inner-title text-left">Solicitações de exibição</h3>
                        <p class="form-info text-left"><i class="fa fa-info-circle pr-2" area-hidden="true"></i>Gerencie
                            as solicitações que empresas fizeram para para exibir soluções no site.</p>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <% if(solucoes.length > 0) { %>
                            <div class="responsive-table">
                                <table class="flat-table">
                                    <thead>
                                        <tr>
                                            <th>Software</th>
                                            <th>Empresa</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% solucoes.forEach( solucao => { %>
                                        <tr>
                                            <td> <a href="/admin/solucao/edit/<%= solucao.codigo %>"><%= solucao.nome %></a>
                                            </td>
                                            <td> <a
                                                    href="/admin/empresa/<%= solucao.empresaId ? solucao.empresaId.id : '' %>"><%= solucao.empresaId ? solucao.empresaId.nome : 'Não especificada ou excluída' %></a>
                                            </td>
                                            <td>
                                                <a href="/admin/solucao/edit/<%= solucao.codigo %>" role="button" class="acao" data-toggle="tooltip"
                                                    data-placement="bottom" title="Analisar"><i
                                                        class="fa fa-eye icon"></i></a>
                                                <form data-confirm="true" action="/admin/solucao/aprovar" class="d-inline-block"
                                                    method="POST" data-confirm="true">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" name="id" value="<%= solucao.id %>">
                                                    <button type="submit" class="acao" data-toggle="tooltip"
                                                        data-placement="bottom" title="Aceitar"><i
                                                            class="fa fa-check icon success"></i></button>
                                                </form>
                                                <form data-confirm="true" action="/admin/solucao/rejeitar" class="d-inline-block"
                                                    method="POST" data-confirm="true">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" name="id" value="<%= solucao.id %>">
                                                    <button type="submit" class="acao" data-toggle="tooltip"
                                                        data-placement="bottom" title="Rejeitar"><i
                                                            class="fa fa-ban icon danger"></i></button>
                                            </td>
                                        </tr>
                                        <% })%>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                            <h3 class="inner-title">Nenhuma solução encontrada.</h3>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('../../includes/components/footer')%>
</body>

<%- include('../../includes/imports/end') %>