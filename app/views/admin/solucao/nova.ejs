<%- include('../../includes/imports/head') %>

</head>

<body class="scrollbar-inner wow fadeIn">
    <%- include('../../includes/components/mainheader') %>

    <main>
        <section id="banner" class="img-webp mb-3">
            <div class="container">
                <h1 class="title mb-3">
                    <span class="wow fadeIn" data-wow-delay="0.3s">Admnistrador</span>
                    <span class="wow bounceInUp bold" data-wow-delay="0.7s">Solicitações de exibição</span>
                </h1>
            </div>
        </section>

        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <%- include('../../includes/components/adminpanel') %>
                </div>
                <div class="col-lg-8">
                    <div class="admin-wrap">
                        <h3 class="inner-title text-left">Nova solução</h3>
                        <p class="form-info text-left"><i class="fa fa-info-circle pr-2" area-hidden="true"></i>Crie
                            uma solução como admnistrador. Você pode selecionar uma empresa já cadastrada ou um nome
                            fictício.</p>
                    </div>
                    <form action="">
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12">
                                        <select type="text" class="form-control selectpicker-empresa" placeholder="Empresa">

                                        </select>
                                    </div>
                                    <div class="col-md-12">
                                        <input type="text" class="form-control" placeholder="Nome do software">
                                    </div>
                                    <div class="col-md-6">
                                        <select type="text" class="form-control selectpicker" title="Categoria" placeholder="Empresa">
                                            <option>Software</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" placeholder="Link até o software">
                                    </div>
                                    <div class="col-md-12">
                                        <div class="media-upload">
                                            <label for="image" class="btn-main--outline media-upload__label">Selecionar
                                                imagem</label>
                                            <input type="file" class="media-upload__input" name="image" id="image">
                                            <p class="media-upload__text">Nenhuma imagem selecionada</p>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn-main--square w-100 mt-2">Criar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('../../includes/components/footer')%>
</body>

<%- include('../../includes/imports/end') %>