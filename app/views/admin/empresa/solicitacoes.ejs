<%- include('../../includes/imports/head') %>

</head>

<body class="scrollbar-inner wow fadeIn">
    <%- include('../../includes/components/mainheader') %>

    <main>
        <section id="banner" class="img-webp mb-3">
            <div class="container">
                <h1 class="title mb-3">
                    <span class="wow fadeIn" data-wow-delay="0.3s">Admnistrador</span>
                    <span class="wow bounceInUp bold" data-wow-delay="0.7s">Solicitações de exibição</span>
                </h1>
            </div>
        </section>

        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <%- include('../../includes/components/adminpanel') %>
                </div>
                <div class="col-lg-8">
                    <div class="admin-wrap">
                        <h3 class="inner-title text-left">Solicitações de empresas</h3>
                        <p class="form-info text-left"><i class="fa fa-info-circle pr-2" area-hidden="true"></i>Gerencie
                            as solicitações que empresas fizeram para se cadastrar. Quando aceitas, recebem um código pelo email fornecido para prosseguir com o cadastro.</p>
                    </div>
                    <div class="row">
                        <div class="col-12">
                        <% if( empresas.length > 0 ) { %>
                            <div class="responsive-table">
                                <table class="flat-table">
                                    <thead>
                                        <tr>
                                            <th>Nome</th>
                                            <th>Email</th>
                                            <th>Telefone</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% empresas.forEach( empresa => { %>
                                        <tr>
                                            <td><%= empresa.nome %></td>
                                            <td><%= empresa.email %></td>
                                            <td><%= empresa.telefone %></td>
                                            <td>
                                                <a href="/admin/empresa/<%= empresa.id %>" role="button" class="acao" data-toggle="tooltip" data-placement="bottom" title="Analisar"><i class="fa fa-eye icon"></i></a>
                                                <form action="/admin/empresa/aprovar" data-confirm="true" class="d-inline-block" method="POST" data-confirm="true"> 
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" name="id" value="<%= empresa.id %>">
                                                    <button type="submit" class="acao" data-toggle="tooltip" data-placement="bottom" title="Aceitar"><i class="fa fa-check icon success"></i></button>
                                                </form>
                                                <form action="/admin/empresa/rejeitar" data-confirm="true" class="d-inline-block" method="POST" data-confirm="true"> 
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" name="id" value="<%= empresa.id %>">
                                                    <button type="submit" class="acao" data-toggle="tooltip" data-placement="bottom" title="Rejeitar"><i class="fa fa-ban icon danger"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <h3 class="inner-title">Nenhuma solicitação encontrada.</h3>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('../../includes/components/footer')%>
</body>

<%- include('../../includes/imports/end') %>