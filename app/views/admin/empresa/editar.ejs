<%- include('../../includes/imports/head') %>

</head>

<body class="scrollbar-inner wow fadeIn">
    <%- include('../../includes/components/mainheader') %>

    <main>
        <section id="banner" class="img-webp mb-3">
            <div class="container">
                <h1 class="title mb-3">
                    <span class="wow fadeIn" data-wow-delay="0.3s">Admnistrador</span>
                    <span class="wow bounceInUp bold" data-wow-delay="0.7s">Solicitações de exibição</span>
                </h1>
            </div>
        </section>

        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <%- include('../../includes/components/adminpanel') %>
                </div>
                <div class="col-lg-8">
                    <div class="admin-wrap">
                        <h3 class="inner-title text-left">Editar empresa</h3>
                        <p class="form-info text-left"><i class="fa fa-info-circle pr-2" area-hidden="true"></i>Altere
                            os dados da empresa já cadastrada.</p>
                    </div>
                    <form action="/admin/empresa/edit" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="id" value="<%= empresa.id %>">
                        <div class="row">
                            <div class="col-12">
                                <%- include('../../includes/form/errorBox') %>
                                <div class="row">
                                    <div class="col-6">
                                        <input type="text" name="nome" class="form-control"
                                            placeholder="Nome da empresa" value="<%= empresa.nome %>">
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="encarregado" class="form-control"
                                            placeholder="Nome do encarregado" value="<%= empresa.encarregado %>">
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="email" class="form-control"
                                            placeholder="Email da empresa" value="<%= empresa.email %>">
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="telefone" class="form-control"
                                            placeholder="Telefone da empresa" value="<%= empresa.telefone %>">
                                    </div>
                                    <div class="col-md-12">
                                        <div class="media-upload">
                                            <p class="form-info ">Imagem da empresa</p>
                                            <label for="image" class="btn-main--outline media-upload__label">Selecionar
                                                imagem</label>
                                            <input type="file" class="media-upload__input" name="image" id="image">
                                            <p class="media-upload__text">Nenhuma imagem selecionada</p>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn-main--square w-100 mt-2">Editar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('../../includes/components/footer')%>
</body>

<%- include('../../includes/imports/end') %>