<%- include('../includes/imports/head') %>
</head>

<body class="scrollbar-inner wow fadeIn">
    <%- include('../includes/components/mainheader') %>
    <main>
        <section id="banner" class="img-webp mb-3">
            <div class="container">
                <h1 class="title mb-3">
                    <span class="wow fadeIn" data-wow-delay="0.3s">Solução</span>
                    <span class="wow bounceInUp bold" data-wow-delay="0.7s">CampAdmin</span>
                </h1>
            </div>
        </section>

        <section class="perfil-solucao">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div id="imagensCarousel" class="carousel slide solucao-slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#imagensCarousel" data-slide-to="0" class="active"></li>
                                <% solucao.images.forEach( (image, index) => { %>
                                <% if( index < 5 ) { %>
                                <li data-target="#imagensCarousel" data-slide-to="<%= index %>"></li>
                                <% } %>
                                <% })%>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100 lazy" src="/images/loading.gif" data-src="<%= solucao.mainImage.url %>""
                                        alt="<%= solucao.nome %>">
                                </div>
                                <% solucao.images.forEach( image => { %>
                                <div class="carousel-item">
                                    <img class="d-block w-100 lazy" src="/images/loading.gif" data-src="<%= image.url %>" alt="<%= solucao.nome %>">
                                </div>
                                <% }) %>

                            </div>
                            <a class="carousel-control-prev d-flex" href="#imagensCarousel" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            </a>
                            <a class="carousel-control-next  d-flex" href="#imagensCarousel" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h4 class="inner-title name text-left d-inline-block pt-3 pr-2">Camp Admin</h4>
                        <div class="d-inline-block">
                            <select class="starsrating" readonly="true">
                                <option <%= solucao.rating == 1 || solucao.rating == 0 ? 'selected' : '' %> value="1">1</option>
                                <option <%= solucao.rating == 2 ? 'selected' : '' %> value="2">2</option>
                                <option <%= solucao.rating == 3 ? 'selected' : '' %> value="3">3</option>
                                <option <%= solucao.rating == 4 ? 'selected' : '' %> value="4">4</option>
                                <option <%= solucao.rating == 5 ? 'selected' : '' %> value="5">5</option>
                            </select>
                        </div>
                        <p class="inner-desc text-left"><%= solucao.descricao %></p>
                    </div>

                    <div class="col-12 pt-5">
                        <h4 class="inner-title uppercase color-black">Avaliações</h4>

                        <div class="row">
                            <div class="col-12 p-3">
                                <button class="btn-main float-right" data-toggle="modal"
                                    data-target="#novaAvaliacaoModal">Fazer avaliação</button>
                            </div>
                            <% avaliacoes.forEach( avaliacao => { %>
                            <div class="col-lg-6">
                                <article class="avaliacao">
                                    <div class="avaliacao__img">
                                        <img src="<%= avaliacao.image.url%>" alt="<%= avaliacao.autor %>">
                                    </div>
                                    <div class="avaliacao__content">
                                        <h5 class="avaliacao__title d-inline-block pr-2"><%= avaliacao.titulo%></h5>
                                        <div class="avaliacao__rating d-inline-block">
                                            <div class="d-inline-block">
                                                <select class="starsrating" readonly="true">
                                                    <option
                                                        <%= avaliacao.rating == 1 || avaliacao.rating == 0 ? 'selected' : '' %>
                                                        value="1">1</option>
                                                    <option <%= avaliacao.rating == 2 ? 'selected' : '' %> value="2">2
                                                    </option>
                                                    <option <%= avaliacao.rating == 3 ? 'selected' : '' %> value="3">3
                                                    </option>
                                                    <option <%= avaliacao.rating == 4 ? 'selected' : '' %> value="4">4
                                                    </option>
                                                    <option <%= avaliacao.rating == 5 ? 'selected' : '' %> value="5">5
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <p class="avaliacao__desc"><%= avaliacao.descricao %></p>
                                        <p class="avaliacao__author text-right"><%= avaliacao.autor %>, feito em
                                            <%= avaliacao.date.toLocaleDateString() %></p>
                                    </div>
                                </article>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('../includes/modals/modal-sucessoavaliacao')%>
    <%- include('../includes/modals/modal-novaavaliacao')%>
    <%- include('../includes/components/footer')%>
</body>
<%- include('../includes/imports/end') %>